<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardElevation="@dimen/_2sdp"
    app:cardCornerRadius="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="top"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="2.4"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ordersTitleItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/arial"
                        android:letterSpacing="0.05"
                        android:maxLines="2"
                        android:text="Infinix Note 40 Pro 5G (Racing Grey, 256GB)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/orgPriceItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/arial"
                        android:text="Order Status :"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ordersStatusItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/arial"
                        android:text="Shipped"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="@dimen/_50sdp">

            <ImageView
                android:id="@+id/ordersImgItem"
                android:layout_width="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:contentDescription="TODO"
                android:src="@drawable/ic_launcher_background" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/imageCountLyOrdersItem"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/_2sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/imageCountItemOrders"
                        android:layout_width="wrap_content"
                        android:text="+10"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:padding="@dimen/_2sdp"
                        android:textColor="@color/orange"
                        android:fontFamily="@font/arial_bold"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/orderStatusLayoutItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:baselineAligned="false"
            android:gravity="center|top"
            android:padding="@dimen/_2sdp"
            android:orientation="horizontal"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:contentDescription="TODO"
                    android:src="@drawable/checkout"
                    app:tint="@color/orange" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_weight="0.22"
                        android:contentDescription="TODO"
                        android:src="@drawable/oval_red" />

                    <LinearLayout
                        android:id="@+id/shippedOrderLineItem"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_3sdp"
                        android:layout_weight="1.86"
                        android:background="@color/grey"
                        android:orientation="horizontal" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/arial"
                    android:text="Placed"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/shippedIconItem"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:contentDescription="TODO"
                    android:src="@drawable/truck"
                    app:tint="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/shippedCircleItem"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_weight="0.22"
                        android:contentDescription="TODO"
                        android:src="@drawable/oval_grey"/>

                    <LinearLayout
                        android:id="@+id/outOfOrderLineItem"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_3sdp"
                        android:layout_weight="1.86"
                        android:background="@color/grey"
                        android:orientation="horizontal" />
                </LinearLayout>

                <TextView
                    android:id="@+id/shippedTextItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/arial"
                    android:text="Shipped"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/outOfDeliveryIconItem"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:contentDescription="TODO"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/baseline_location_on_24"
                        app:tint="@color/grey" />

                    <ImageView
                        android:id="@+id/deliveredIconItem"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="TODO"
                        android:src="@drawable/baseline_done_all_24"
                        app:tint="@color/grey" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/outOfDeliveryCircleItem"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_weight="0.23"
                        android:contentDescription="TODO"
                        android:src="@drawable/oval_grey" />

                    <LinearLayout
                        android:id="@+id/deliveredLineItem"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_3sdp"
                        android:layout_weight="1.55"
                        android:background="@color/grey"
                        android:orientation="horizontal" />

                    <ImageView
                        android:id="@+id/deliveredCircleItem"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_weight="0.22"
                        android:contentDescription="TODO"
                        android:src="@drawable/oval_grey" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/outOfDeliveryTextItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/arial"
                        android:text="Out of \nDelivery"
                        android:gravity="center"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/deliveryTextItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/arial"
                        android:text="Delivered"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>